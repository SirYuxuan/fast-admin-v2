<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.oofo.system.mapper.SysMenuMapper">

    <!-- 结果映射 -->
    <resultMap id="SysMenuResultMap" type="cc.oofo.system.entity.SysMenu">
        <id column="id" property="id" />
        <result column="pid" property="pid" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="icon" property="icon" />
        <result column="meta_title" property="metaTitle" />
        <result column="meta_order" property="metaOrder" />
        <result column="meta_affix_tab" property="metaAffixTab" />
        <result column="meta_badge" property="metaBadge" />
        <result column="meta_badge_type" property="metaBadgeType" />
        <result column="meta_badge_variants" property="metaBadgeVariants" />
        <result column="meta_iframe_src" property="metaIframeSrc" />
        <result column="meta_link" property="metaLink" />
        <result column="remark" property="remark" />
        <result column="created_by" property="createdBy" />
        <result column="created_at" property="createdAt" />
        <result column="updated_by" property="updatedBy" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List"> id, pid, name, code, type, status, path, component, icon,
        meta_title, meta_order, meta_affix_tab, meta_badge, meta_badge_type, meta_badge_variants,
        meta_iframe_src, meta_link, remark, created_by, created_at, updated_by, updated_at,
        is_deleted </sql>

    <!-- 根据用户ID查询所有有权限的菜单 -->
    <select id="selectAllByUserId" resultMap="SysMenuResultMap"> SELECT DISTINCT m.* FROM sys_menu m
        INNER JOIN sys_roles_menus rm ON m.id = rm.menu_id INNER JOIN sys_users_roles ur ON
        rm.role_id = ur.role_id WHERE ur.user_id = #{userId} AND m.status = 1 AND m.is_deleted =
        false ORDER BY m.meta_order ASC, m.id ASC </select>

</mapper>